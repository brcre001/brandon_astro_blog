<style lang="scss">
    main {
        margin: auto;
        padding: 2rem;
        max-width: 1200px;
        padding-top: 3rem;
        color: white;
    }

    .contact-header {
        text-align: center;
        margin-bottom: 4rem;

        h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        p {
            color: #888;
            font-size: 1.2rem;
        }
    }

    .contact-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        margin-bottom: 4rem;

        @media (max-width: 768px) {
            grid-template-columns: 1fr;
        }
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .info-card {
        background: rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: transform 0.2s ease;

        &:hover {
            transform: translateY(-5px);
        }

        .icon {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: white;
        }

        p {
            color: #888;
            margin: 0.5rem 0;
        }

        a {
            color: var(--accent-light);
            text-decoration: none;
            transition: color 0.2s ease;

            &:hover {
                color: white;
            }
        }

        .social-links {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;

            a {
                background: rgba(255, 255, 255, 0.1);
                padding: 0.5rem;
                border-radius: 20px;
                font-size: 0.9rem;

                &:hover {
                    background: rgba(255, 255, 255, 0.2);
                }
            }
        }
    }

    .map-container {
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        
        iframe {
            width: 100%;
            height: 100%;
            min-height: 450px;
        }
    }
</style> 