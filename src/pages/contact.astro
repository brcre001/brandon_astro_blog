---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact | Brandon's Dev Blog">
    <main>
        <section class="contact-header">
            <h1 class="text-gradient">Get In Touch</h1>
            <p>Let's discuss your next project or just say hello!</p>
        </section>

        <section class="contact-content">
            <div class="contact-info">
                <div class="info-card">
                    <h3>Location</h3>
                    <p>Miami, Florida</p>
                    <p>United States</p>
                </div>

                <div class="info-card">
                    <h3>Email</h3>
                    <a href="mailto:brandon.f.creed@gmail.com">brandon.f.creed@gmail.com</a>
                </div>

                <div class="info-card">
                    <h3>Social</h3>
                    <div class="social-links">
                        <a href="https://www.linkedin.com/in/brandon-creed/" target="_blank">LinkedIn</a>
                        <a href="https://github.com/brcre001" target="_blank">GitHub</a>
                        <a href="https://x.com/brandoncreed_1" target="_blank">X</a>
                    </div>
                </div>
            </div>

            <div class="map-container">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d114964.38943762223!2d-80.29949920266738!3d25.782545310907384!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d9b0a20ec8c111%3A0xff96f271ddad4f65!2sMiami%2C%20FL!5e0!3m2!1sen!2sus!4v1710901234567!5m2!1sen!2sus"
                    width="100%"
                    height="450"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </section>
    </main>
</Layout>

<style lang="scss">
    main {
        margin: auto;
        padding: 2rem;
        max-width: 1200px;
        padding-top: 3rem;
        color: white;
    }

    .contact-header {
        text-align: center;
        margin-bottom: 4rem;

        h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        p {
            color: #888;
            font-size: 1.2rem;
        }
    }

    .contact-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        margin-bottom: 4rem;

        @media (max-width: 768px) {
            grid-template-columns: 1fr;
        }
    }

    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .info-card {
        background: rgba(255, 255, 255, 0.05);
        padding: 2rem;
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: transform 0.2s ease;

        &:hover {
            transform: translateY(-5px);
        }

        .icon {
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        h3 {
            font-size: 1.5rem;
            margin-bottom: 1rem;
            color: white;
        }

        p {
            color: #888;
            margin: 0.5rem 0;
        }

        a {
            color: var(--accent-light);
            text-decoration: none;
            transition: color 0.2s ease;

            &:hover {
                color: white;
            }
        }

        .social-links {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;

            a {
                background: rgba(255, 255, 255, 0.1);
                padding: 0.5rem 1rem;
                border-radius: 20px;
                font-size: 0.9rem;

                &:hover {
                    background: rgba(255, 255, 255, 0.2);
                }
            }
        }
    }

    .map-container {
        border-radius: 15px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        
        iframe {
            width: 100%;
            height: 100%;
            min-height: 450px;
        }
    }
</style> 